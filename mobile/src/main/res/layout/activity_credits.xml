<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_credits"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.software.rmh.friends.Credits">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Thanks to JoaquimLey for the FABOptions library. https://github.com/JoaquimLey/faboptions/blob/master/LICENSE"/>

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_below="@id/tv1"
        android:text="Thanks to developer-shivam for the Crescento library. https://github.com/developer-shivam/Crescento/blob/master/Licence.md"/>

</RelativeLayout>
